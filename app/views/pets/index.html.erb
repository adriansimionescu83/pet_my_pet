<! Add map at the top>
<div class="index-banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://www.hotelgift.com/wp-content/uploads/2017/10/dubai-map.png);">
</div>

<div class="container">
  <div class="row">

  <! -------------- pet cards -------------- >
    <% @pets.each do |pet| %>
      <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
        <div class="card justify-content-center">
          <%= link_to pet_path(pet) do %>
           <img src="https://images.unsplash.com/photo-1599692392256-2d084495fe15?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1160&q=80" class="card-img-top" alt="...">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><strong><%= pet.name %></strong></h5>
            <p class="card-text"><%= pet.description %></p>
            <hr>

            <div class="d-flex justify-content-between align-items-center mt-4">
              <div class="d-flex justify-content-center align-items-center mb-2">
                <i class="fas fa-star"></i>
                <h6 class="card-subtitle text-muted"><strong><%= pet.average_rating %></strong></h6>
              </div>
              <h6 class="card-subtitle mb-2 text-muted"><strong>AED <%= pet.price_per_day %></strong> / day</h6>
            </div>

            <div class="edit-pet d-flex justify-content-between">
              <% if pet.user == current_user  %>
                <%= link_to 'Edit', edit_pet_path(pet), class: "btn btn-outline-secondary"%>
                <%= link_to 'Delete', pet_path(pet), class: "btn btn-outline-secondary",
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
