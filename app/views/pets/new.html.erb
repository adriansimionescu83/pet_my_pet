
<div class="container">
  <div class="d-flex justify-content-center">
    <div class="card row col-9 my-2">

      <div class="card-body pet-form p-5">
        <h1>Add your pet details</h1>
        <%= simple_form_for @pet, html: { data: { turbo: false } } do |f| %>
          <div class="form-group mt-2">
            <%= f.input :name, required: true, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
          </div>
          <div class="form-group mt-2">
            <%= f.input :gender, collection: Pet::GENDER, required: true, input_html: { class: 'form-control custom-select' }, label_html: { class: 'form-label' } %>
          </div>
          <div class="form-group mt-2">
            <%= f.input :age, required: true, input_html: { class: 'form-control', type: 'number', min: 0 }, label_html: { class: 'form-label' } %>
          </div>
          <div class="form-group mt-2">
            <%= f.input :location, required: true, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
          </div>
          <div class="form-group mt-2">
            <%= f.input :description, required: true, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
          </div>
          <div class="form-group mt-2">
            <%= f.input :price_per_day, required: true, input_html: { class: 'form-control', type: 'number', min: 0, step: '0.01' }, label_html: { class: 'form-label' } %>
          </div>
          <div class="form-group mt-2">
            <%= f.association :species, input_html: { class: 'form-control custom-select' }, label_html: { class: 'form-label' }, required: true %>
          </div>
          <div class="form-group mt-2">
            <%= f.association :breed, input_html: { class: 'form-control custom-select' }, label_html: { class: 'form-label' }, required: true %>
          </div>
          <div class="form-group mt-2">
            <%= f.input :photo, as: :file %>
          </div>
          <%= f.submit "Save My Pet", class: "btn btn-primary mt-2" %>
        <% end %>

      </div>

    </div>
  </div>
</div>
