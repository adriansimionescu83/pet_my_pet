<div class="container">
  <div class="d-flex justify-content-center">
    <div class="card row col-9 my-2">

      <div class="card-body pet-form p-5">
        <h1>Sign Up</h1>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name,
                        autofocus: true,
                        input_html: { class: 'mt-2 form-control', autocomplete: "first-name" },
                        wrapper_html: { class: 'mb-2 form-group' } %>
            <%= f.input :last_name,
                        required: true,
                        input_html: { class: 'mt-2 form-control', autocomplete: "last-name" },
                        wrapper_html: { class: 'mb-2 form-group' } %>
            <%= f.input :email,
                        required: true,
                        input_html: { class: 'mt-2 form-control', autocomplete: "email" },
                        wrapper_html: { class: 'mb-2 form-group' } %>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { class: 'mt-2 form-control', autocomplete: "new-password" },
                        wrapper_html: { class: 'mb-2 form-group' } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { class: 'mt-2 form-control', autocomplete: "new-password" },
                        wrapper_html: { class: 'mb-2 form-group' } %>
            <%= f.input :photo, as: :file,
                        input_html: { class: 'mt-2 form-control-file px-2' },
                        wrapper_html: { class: 'mb-2 form-group' } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
          </div>
        <% end %>


        <%= render "devise/shared/links" %>



      </div>

    </div>
  </div>
</div>
